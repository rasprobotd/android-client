<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seakg.rasprobotcli.ControlsActivity">

    <Button
        android:id="@+id/btn_left"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Left"
        android:layout_below="@+id/textView_status"
        android:layout_alignRight="@+id/btn_autodriver"
        android:layout_marginRight="77dp"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_forward"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_left"
        android:layout_toLeftOf="@+id/btn_right"
        android:background="@drawable/rounded_button"
        android:text="Forward" />

    <Button
        android:id="@+id/btn_backward"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="42dp"
        android:background="@drawable/rounded_button"
        android:text="Backward"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_left" />

    <Button
        android:id="@+id/btn_autodriver"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_right"
        android:layout_marginRight="39dp"
        android:background="@drawable/rounded_button"
        android:text="Auto Driver" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forward"
        android:layout_toRightOf="@+id/btn_backward"
        android:background="@drawable/rounded_button"
        android:text="Right" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Connecting..."
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:layout_below="@+id/nameofrobot"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/nameofrobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_status"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="25sp" />

    <com.seakg.rasprobotcli.Components.DriverControls
        android:id="@+id/driverControls"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
